<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|left"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/numpad_field">

        <Button
            android:id="@+id/num_0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:fontFamily="@font/rp2"
            android:text="0" />

        <Button
            android:id="@+id/num_c"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:fontFamily="@font/rp2"
            android:text="C" />

        <Button
            android:id="@+id/button_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="." />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/numpad_field"
        android:layout_width="313dp"
        android:layout_height="329dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:fontFamily="@font/rp2"
                android:text="1" />

            <Button
                android:id="@+id/num_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="0"
                android:fontFamily="@font/rp2"
                android:text="2" />

            <Button
                android:id="@+id/num_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="0"
                android:fontFamily="@font/rp2"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="0"
                android:fontFamily="@font/rp2"
                android:text="4" />

            <Button
                android:id="@+id/num_5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="0"
                android:fontFamily="@font/rp2"
                android:text="5" />

            <Button
                android:id="@+id/num_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="0"
                android:fontFamily="@font/rp2"
                android:text="6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="0"
                android:fontFamily="@font/rp2"
                android:text="7" />

            <Button
                android:id="@+id/num_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="0"
                android:fontFamily="@font/rp2"
                android:text="8" />

            <Button
                android:id="@+id/num_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="0"
                android:fontFamily="@font/rp2"
                android:text="9" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/numpad_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/editText_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:fontFamily="@font/rp2"
            android:inputType="textPersonName|numberDecimal"
            android:text="INPUT"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_gravity="right|top"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_value_to_be_changed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rp2"
                android:text="value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rp2"
                android:text="operator" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="367dp"
        android:layout_gravity="center|right"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/numpad_field"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/num_plus"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:fontFamily="@font/rp2"
            android:text="+" />

        <Button
            android:id="@+id/num_minus"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:fontFamily="@font/rp2"
            android:text="-" />

        <Button
            android:id="@+id/num_mult"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:fontFamily="@font/rp2"
            android:text="*" />

        <Button
            android:id="@+id/num_div"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:fontFamily="@font/rp2"
            android:text="/" />

        <Button
            android:id="@+id/num_eq"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:text="=" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="230dp"
        android:layout_height="174dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pixelator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:fontFamily="@font/rp2"
            android:text="pixelerator"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>